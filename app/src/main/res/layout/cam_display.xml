<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cam_switch"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">
    <TextView
        android:id="@+id/cam_display_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/main_text_margin_left"
        android:layout_marginStart="@dimen/main_text_margin_left"
        android:layout_marginTop="30dp"
        android:textColor="@color/mainTextColor"
        android:text="TextView" />

    <TextView
        android:id="@+id/cam_display_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/main_text_margin_left"
        android:layout_marginEnd="@dimen/main_text_margin_left"
        android:layout_marginTop="30dp"
        android:textColor="@color/mainTextColor"
        android:text="TextView" />

</RelativeLayout>