<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/device_floor_heat_switch"
        layout="@layout/cam_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/device_floor_heat_temperature"
        layout="@layout/cam_slider_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_floor_heat_switch" />

    <include
        layout="@layout/seperator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/device_floor_heat_temperature" />

</RelativeLayout>