<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/environment_temperature"
        layout="@layout/cam_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/environment_humidity"
        layout="@layout/cam_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/environment_temperature"/>

    <include
        android:id="@+id/environment_pm"
        layout="@layout/cam_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/environment_humidity"/>

    <include
        layout="@layout/seperator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/environment_pm" />

</RelativeLayout>