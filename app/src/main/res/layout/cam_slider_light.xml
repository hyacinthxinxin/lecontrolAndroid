<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cam_slider_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cam_slider_light_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:textColor="@color/mainTextColor"
        android:text="调光" />

    <ImageView
        android:id="@+id/lc_iv_brightness1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/cam_slider_light_textView"
        android:src="@mipmap/switch_dimmer" />

    <SeekBar
        android:id="@+id/cam_slider_light_seekBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cam_slider_light_textView"
        android:layout_toLeftOf="@+id/lc_iv_brightness2"
        android:layout_toRightOf="@+id/lc_iv_brightness1"
        android:indeterminate="false" />

    <ImageView
        android:id="@+id/lc_iv_brightness2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cam_slider_light_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/switch_brighter" />

</RelativeLayout>