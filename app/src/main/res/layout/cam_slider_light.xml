<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cam_slider_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cam_slider_light_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/main_text_margin_left"
        android:layout_marginStart="@dimen/main_text_margin_left"
        android:layout_marginTop="27dp"
        android:text="调光"
        android:textColor="@color/mainTextColor" />

    <LinearLayout
        android:id="@+id/cam_slider_light_seekBarL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cam_slider_light_textView"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/lc_iv_brightness1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="light_darker"
            android:src="@drawable/light_darker" />

        <SeekBar
            android:id="@+id/cam_slider_light_seekBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:indeterminate="false" />

        <ImageView
            android:id="@+id/lc_iv_brightness2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="light_brighter"
            android:src="@drawable/light_brighter" />

    </LinearLayout>

</RelativeLayout>