<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/device_air_conditioning_switch"
        layout="@layout/cam_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/device_air_conditioning_temperature"
        layout="@layout/cam_slider_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_air_conditioning_switch" />

    <include
        android:id="@+id/device_air_conditioning_speed"
        layout="@layout/cam_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_air_conditioning_temperature" />

    <include
        android:id="@+id/device_air_conditioning_mode"
        layout="@layout/cam_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_air_conditioning_speed" />

    <include
        layout="@layout/seperator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/device_air_conditioning_mode" />

</RelativeLayout>