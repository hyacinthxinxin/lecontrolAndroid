<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cam_speed"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cam_speed_textView"
        android:textColor="@color/mainTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cam_speed" />

    <RadioGroup
        android:id="@+id/cam_speed_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cam_speed_textView"
        android:orientation="horizontal"
        android:layout_marginTop="24dp" >

        <RadioButton
            android:id="@+id/cam_speed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:text="@string/cam_speed1" />

        <RadioButton
            android:id="@+id/cam_speed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:text="@string/cam_speed2" />

        <RadioButton
            android:id="@+id/cam_speed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:text="@string/cam_speed3" />

        <RadioButton
            android:id="@+id/cam_speed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:text="@string/cam_speed4" />

        <RadioButton
            android:id="@+id/cam_speed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextColor"
            android:text="@string/cam_speed5" />

    </RadioGroup>


</RelativeLayout>